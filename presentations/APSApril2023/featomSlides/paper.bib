@article{andraeNumericalElectronicStructure1997,
  title = {Numerical Electronic Structure Calculations for Atoms. {{I}}. {{Generalized}} Variable Transformation and Nonrelativistic Calculations},
  author = {Andrae, Dirk and Hinze, Juergen},
  date = {1997},
  journaltitle = {International Journal of Quantum Chemistry},
  volume = {63},
