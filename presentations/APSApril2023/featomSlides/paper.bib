  shorttitle = {Adaptive Local Basis Set for {{Kohn}}–{{Sham}} Density Functional Theory in a Discontinuous {{Galerkin}} Framework {{II}}},
  author = {Zhang, Gaigong and Lin, Lin and Hu, Wei and Yang, Chao and Pask, John E.},
